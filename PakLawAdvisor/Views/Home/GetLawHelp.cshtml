@model IEnumerable<PakLawAdvisor.Models.law_catagry>
@{
    ViewBag.Title = "GetLawHelp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-10 col-md-offset-1">
    @using (@Html.BeginForm("GetLawHelp", "Home", FormMethod.Get))
    {
     
            <div class="row section-top" >
                
                   
                    <div class="col-md-4 col-md-offset-1">
                        <h4> Select related case: </h4>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownList("crime", (SelectList)ViewBag.crime_list, "Select Crime type",
                        new { @required = "required", @class = "form-control", id = "crime" })
                    </div>
                    <div class="col-md-2">
                        <input type="submit"class="btn-primary form-control" value="Search" />
                    </div>
                </div>
                      
    }
      <div class="row">
           <div class="col-md-2 section-body" >Act Id </div>
           <div class="col-md-8 section-body"> Offence definition</div>
           <div class="col-md-2 section-body">Option </div>
       </div>

    @foreach (var m in Model)
    {
        foreach (var n in @m.ccps)
        {

            <div class="row section-body" style="border-top:0px;" >
                <div class="col-md-2 ">@n.Sec_id </div>
                <div class="col-md-8 section-body " style="border-top:0px;"> @n.Offence</div>
                <div class="col-md-2 ">@Html.ActionLink("View Detail", "view_detail", new { id=n.Sec_id}) </div>
            </div>



        }

    }</div>
    <div class="col-md-10 col-md-offset-1 " style="overflow:scroll;height:400px">
        <h1>Related Articles</h1>
        @foreach (var n in @Model.FirstOrDefault().case_exmpl)
        {

            <div class="row">
                <div class="col-md-12" style="border-bottom:1px solid ;background-color:white;">
                    @n.Cat_name<br />
                    @n.Summary<br />
                    @n.discription<br />

                    Added By:     @n.lawyer.First_Name&nbsp;@n.lawyer.Second_Name at: @n.Date_time
                    <p>................</p>

                </div>
            </div><br />
        }
    </div>
            <br />

<div class="col-md-3">

</div>

</div>@* end of main Row*@
