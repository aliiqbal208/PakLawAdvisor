@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row" >
    <br />
    <br />
    <div class="col-md-5 col-md-offset-1 section-body" style="min-height:415px;height:auto;" >
       <div class=" row section-top">Upload a new Book</div>
        <div class="row">
        @using (Html.BeginForm("upload_book", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {<br/>
            <div class="row">
                <div class="col-md-4 col-md-offset-1">Select A Book</div>
                <div class="col-md-6"><input type="file" name="file" required="required" value="Choose a book" /></div>
            </div><br/>
            <div class="row">
                <div class="col-md-4 col-md-offset-5"><input type="submit" value="Upload " name="Command" /></div>
            </div>
        }        
           
        </div>
        <br/>
        <div class="row">
            <div class="col-md-12" style="background-color:white;margin-bottom:30px;">
                <table border="1" style="width:100%">
                    <tr>
                        <th>
                            BookName
                        </th>
                        <th>
                            Delete
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.name
                            </td>
                            <td>
                                @Html.ActionLink("Delete this book", "Delete_Book", new { id = item.Book_id })

                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>

    </div>
    <div class="col-md-5 " style="margin-left:5px; min-height:350px;height:auto;">
        <div class="row section-top">Manage News</div>
        @using (Html.BeginForm("add_news", "admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="row section-body"><br />
                <div class="row">
                    <div class="col-md-2 col-md-offset-1"  >
                       <b> Title</b>
                    </div>
                    <div class="col-md-5 " id="news_title">
                        <input name="news_title"class="form-control" required = "required" Style = "width:100%" />
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-md-3 ">
                        <label> Summary</label>
                    </div>
                    <div class="col-md-8 " id="news_summary">
                        @Html.TextArea("news_summary", new {@class="form-control", required = "required", Style = "width:100%" })
                    </div>
                </div><br />

                <div class="row">
                    <div class="col-md-3 ">
                        <label>Description</label>
                    </div>
                    <div class="col-md-8" id="news_description">
                        @Html.TextArea("news_description", new { @class = "form-control", required = "required", Style = "height:150px; width:100%" })
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-md-2 col-md-push-3">
                        <input id="Submit" type="submit" class="btn-primary" value="Add News" />
                    </div>
                </div><br />
            </div>
        }
    </div>


</div>


